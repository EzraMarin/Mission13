@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>

<h1>Bowlers</h1>


<table class="table">
    <tbody>
        @foreach (var r in Model)
        {
        <tr>
            <td>@r.BowlerID - @r.BowlerFirstName @r.BowlerLastName</td>

            <td>
                <a class="btn btn-sm my-button" asp-controller="Home" asp-action="Edit" asp-route-id="@r.BowlerID">Edit</a>
            </td>
            <td>
                <form method="post">
                    <a class="btn btn-sm my-button" asp-controller="Home" asp-action="Delete" asp-route-id="@r.BowlerID">Delete</a>
                </form>
            </td>
            
        </tr>
        }
    </tbody>
</table>



<a class="btn btn-sm my-button" asp-controller="Home" asp-action="Add">Add Bowler</a>


